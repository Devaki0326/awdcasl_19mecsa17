import java.util.Scanner;
public class Main
{
    public static void main(String[] args) 
    {
        int n;
        Scanner s = new Scanner(System.in);
        System.out.print("Enter any number:");
        n = s.nextInt();
        if(n % 4 == 0)
        {
            System.out.println(n+1);
        }
        else
        {
            System.out.println(n-1);
        }
    }
}
